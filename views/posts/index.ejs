<%- layout("./layouts/boilerplate") %>

<div class="text-center mb-5">
    <h1 class="fw-bold">Markdown Blog</h1>
    <p>Write your blogs, share them with others instantly, enjoy and etc..</p>
</div>

<div class="row">
    <div class="col-lg-9">
        <div class="d-flex justify-content-end mb-4">
            <a href="/posts/new" class="btn btn-primary rounded-0">New Post</a>
        </div>
        <% posts.forEach((post) => { %>
            <div class="card mb-5 rounded-0">
                <img src="<%= post.image.thumbnailUrl %>" class="img-fluid card-img-top rounded-0" style="height: 360px; object-fit: contain;" alt="post image">
                <div class="card-body border-top border-bottom py-2 d-flex align-items-center">
                    <div class="card-subtitle d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                        </svg>
                        <span class="fs-7 ms-2 text-muted"><%= post.author.username %></span>
                    </div>
                    <div class="card-subtitle d-flex align-items-center ms-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-fill" viewBox="0 0 16 16">
                            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V5h16V4H0V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5"/>
                        </svg>
                        <span class="fs-7 ms-2 text-muted"><%= post.createdAt.toLocaleDateString('en-us', { year:"numeric", month:"short", day:"numeric"})  %></span>
                    </div>
                </div>
                <div class="card-body">
                    <h3 class="card-title mb-3 fw-bold"><%= post.title %></h3>
                    <p class="card-text text-truncate"><%= post.body %></p>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <h6 class="d-flex align-items-center text-dark mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-text" viewBox="0 0 16 16">
                                <path d="M2.678 11.894a1 1 0 0 1 .287.801 11 11 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8 8 0 0 0 8 14c3.996 0 7-2.807 7-6s-3.004-6-7-6-7 2.808-7 6c0 1.468.617 2.83 1.678 3.894m-.493 3.905a22 22 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a10 10 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9 9 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105"/>
                                <path d="M4 5.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8m0 2.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5"/>
                            </svg>
                            <span class="ms-2 fs-7"><%= post.reviews.length %></span>
                        </h6>
                        <h6 class="d-flex align-items-center text-dark mb-0 ms-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                            </svg>
                            <span class="ms-2 fs-7"><%= post.views %></span>
                        </h6>
                        <h6 class="d-flex align-items-center text-dark mb-0 ms-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
                            </svg>
                            <span class="ms-2 fs-7"><%= post.likedByUsers.length %></span>
                        </h6>
                    </div>
                    <a href="/posts/<%= post._id %>" class="link-dark fw-bold">
                        <span>Read more</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
                        </svg>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="col-lg-3">
        <div class="card bg-light rounded-0 mb-4">
            <div class="card-body">
                <form action="/posts" method="GET" class="needs-validation" novalidate>
                    <div>
                        <h5><label for="search" class="card-title">Search</label></h5>
                        <input type="text" id="search" name="search" class="form-control" value="<%= (search)? search: "" %>" placeholder="Sport, etc ..." required>
                    </div>
                </form>
            </div>
        </div>
        <div class="card bg-primary rounded-0 mb-4">
            <div class="card-body">
                <form action="/" method="POST" class="needs-validation" novalidate>
                    <div>
                        <h5 class="text-white"><label for="email" class="card-title">Newsletter Subsrcribe</label></h5>
                        <input type="text" id="email" name="email" class="form-control" placeholder="xyz@domain" required>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>